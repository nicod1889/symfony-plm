{% extends 'base.html.twig' %}

{% block title %}Producto{% endblock %}

{% block body %}
    <h1>Producto</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ producto.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ producto.name }}</td>
            </tr>
            <tr>
                <th>Sku</th>
                <td>{{ producto.sku }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ producto.price }}</td>
            </tr>
            <tr>
                <th>CreatedOn</th>
                <td>{{ producto.createdOn ? producto.createdOn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gx-5">
        <a href="{{ path('app_producto_index') }}" class="btn btn-secondary pt-1 pb-1 mr-2">
            <i class="fa-solid fa-arrow-left"></i>
            Back
        </a>
        <a href="{{ path('app_producto_edit', {'id': producto.id}) }}" class="btn btn-info pt-1 pb-1 mr-2">
            <i class="fa-solid fa-pen-to-square"></i>
            Edit
        </a>
        {{ include('producto/_delete_form.html.twig') }}
    </div>

{% endblock %}

