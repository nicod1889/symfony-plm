{% extends 'base.html.twig' %}

{% block title %}Programa index{% endblock %}

{% block body %}
    <h1 class="text-center">Listado de programas PLM</h1>
    <p class="text-center">Filtros</p>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for programa in paginator.results %}
        <div class="col mb-3">
            <div class="card h-100">
            <img src="{{ programa.miniatura }}" class="card-img-top" alt="Miniatura del programa ">
            <div class="card-body">
                <h5 class="card-title">{{ programa.titulo }}</h5>
                <p class="card-text">Edición: {{ programa.edicion }}</p>
                <p class="card-text">Programa número {{ programa.id }}</p>
            </div>
            <div class="card-footer">
                <small class="text-muted">{{ programa.fecha ? programa.fecha|date('Y-m-d') : '' }}</small>
                <a href="{{ path('app_programa_show', {'id': programa.id}) }}">show</a>
            </div>
            </div>
        </div>
        {% endfor %}
    </div>

    {% if paginator.hasToPaginate %}
    <div class="navigation text-center">
        <ul class="pagination justify-content-center mt-3">
            {% if paginator.hasPreviousPage %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('programa_index_paginated', {page: paginator.previousPage}) }}" rel="previous">
                        <i class="fa fw fa-long-arrow-left"></i>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link"><i class="fa fw fa-arrow-left"></i></span>
                </li>
            {% endif %}

            {% if paginator.currentPage > 6 %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('programa_index_paginated', {page: 1}) }}">1</a>
                </li>
                <li class="page-item">
                    <span class="page-link">...</span>
                </li>
            {% endif %}

            {% set max_pages_to_show = 4 %}
            {% set start_page = paginator.currentPage - max_pages_to_show %}
            {% set end_page = paginator.currentPage + max_pages_to_show %}

            {% if start_page < 1 %}
                {% set start_page = 1 %}
            {% endif %}

            {% if end_page > paginator.lastPage %}
                {% set end_page = paginator.lastPage %}
            {% endif %}

            {% for i in start_page..end_page %}
                {% if i == paginator.currentPage %}
                    <li class="page-item active">
                        <span class="page-link">{{ i }} <span class="sr-only"></span></span>
                    </li>
                {% else %}
                    <li class="page-item"><a class="page-link" href="{{ path('programa_index_paginated', {page: i}) }}">{{ i }}</a></li>
                {% endif %}
            {% endfor %}

            {% if end_page < paginator.lastPage %}
                <li class="page-item">
                    <span class="page-link">...</span>
                </li>
            {% endif %}

            {% if paginator.currentPage < paginator.lastPage - 5 %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('programa_index_paginated', {page: paginator.lastPage}) }}">{{ paginator.lastPage }}</a>
                </li>
            {% endif %}

            {% if paginator.hasNextPage %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('programa_index_paginated', {page: paginator.nextPage}) }}">
                        <span><i class="fa fw fa-long-arrow-right"></i></span>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link"><i class="fa fw fa-long-arrow-right"></i></span>
                </li>
            {% endif %}
        </ul>
    </div>
    {% endif %}
{% endblock %}