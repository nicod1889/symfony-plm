{% extends 'base.html.twig' %}

{% block title %}Persona{% endblock %}

{% block body %}
    <h1>Persona</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ persona.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ persona.nombre }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ persona.apellido }}</td>
            </tr>
            <tr>
                <th>Dni</th>
                <td>{{ persona.dni }}</td>
            </tr>
            <tr>
                <th>Edad</th>
                <td>{{ persona.edad }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gx-5">
        <a href="{{ path('app_persona_index') }}" class="btn btn-secondary pt-1 pb-1 mr-2">
            <i class="fa-solid fa-arrow-left"></i>
            Back
        </a>
        <a href="{{ path('app_persona_edit', {'id': persona.id}) }}" class="btn btn-info pt-1 pb-1 mr-2">
            <i class="fa-solid fa-pen-to-square"></i>
            Edit
        </a>
        {{ include('persona/_delete_form.html.twig') }}
    </div>
{% endblock %}
