{% extends 'base.html.twig' %}

{% block title %}Persona3 index{% endblock %}

{% block body %}
    <h1>Persona3 index</h1>

    <table class="table">
        <thead>
            <tr class="text-center">
                <th>Id</th>
                <th>Nombre</th>
                <th>Edad</th>
                <th>Rubro</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for persona3 in persona3s %}
            <tr class="text-center">
                <td>{{ persona3.id }}</td>
                <td>{{ persona3.nombre }}</td>
                <td>{{ persona3.edad == 125 ? '---' : persona3.edad }}</td>
                <td>{{ persona3.rubro }}</td>
                <td>
                    <a href="{{ path('app_persona3_show', {'id': persona3.id}) }}">show</a>
                    <a href="{{ path('app_persona3_edit', {'id': persona3.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_persona3_new') }}">Create new</a>
{% endblock %}
