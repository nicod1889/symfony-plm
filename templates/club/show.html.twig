{% extends 'base.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
    <h1>Club</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ club.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ club.name }}</td>
            </tr>
            <tr>
                <th>Ciudad</th>
                <td>{{ club.city }}</td>
            </tr>
            <tr>
                <th>Socios</th>
                <td>{{ club.socios }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gx-5">
        <a href="{{ path('app_club_index') }}" class="btn btn-secondary pt-1 pb-1 mr-2">
            <i class="fa-solid fa-arrow-left"></i>
            Back
        </a>
        <a href="{{ path('app_club_edit', {'id': club.id}) }}" class="btn btn-info pt-1 pb-1 mr-2">
            <i class="fa-solid fa-pen-to-square"></i>
            Edit
        </a>
        {{ include('club/_delete_form.html.twig') }}
    </div>
{% endblock %}
