{{ form_start(form) }}
    <div class="row mb-5">
        <div class="col">
            <h5 class="mb-0">{{ form_label(form.name) }}</h5>
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
            <small>{{ form_help(form.name) }}</small>
        </div>
        <div class="col">
            <h5 class="mb-0">{{ form_label(form.city) }}</h5>
            {{ form_errors(form.city) }}
            {{ form_widget(form.city) }}
            <small>{{ form_help(form.city) }}</small>
        </div>
    </div>    
    
    <div class="d-flex gx-5">
        <a href="{{ path('app_club_index') }}" class="btn btn-secondary pt-1 pb-1 mr-2">
            <i class="fa-solid fa-arrow-left"></i>
            Back
        </a>
        <button class="btn btn-info pt-1 pb-1 mr-2">
            <i class="fa-solid fa-download"></i>
            {{ button_label|default('Save') }}
        </button>
    </div>
{{ form_end(form) }}