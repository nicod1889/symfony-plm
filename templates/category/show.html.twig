{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>CreatedOn</th>
                <td>{{ category.createdOn ? category.createdOn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gx-5">
        <a href="{{ path('app_category_index') }}" class="btn btn-secondary pt-1 pb-1 mr-2">
            <i class="fa-solid fa-arrow-left"></i>
            Back
        </a>
        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-info pt-1 pb-1 mr-2">
            <i class="fa-solid fa-pen-to-square"></i>
            Edit
        </a>
        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
