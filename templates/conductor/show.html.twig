{% extends 'base.html.twig' %}

{% block title %}Conductor{% endblock %}

{% block body %}
    <h1>Conductor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ conductor.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ conductor.nombre }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ conductor.apellido }}</td>
            </tr>
            <tr>
                <th>Edad</th>
                <td>{{ conductor.edad }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ conductor.foto }}</td>
            </tr>
            <tr>
                <th>Cumple</th>
                <td>{{ conductor.cumple ? conductor.cumple|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Apodo</th>
                <td>{{ conductor.apodo }}</td>
            </tr>
            <tr>
                <th>Instagram</th>
                <td>{{ conductor.instagram }}</td>
            </tr>
            <tr>
                <th>Twitter</th>
                <td>{{ conductor.twitter }}</td>
            </tr>
            <tr>
                <th>Youtube</th>
                <td>{{ conductor.youtube }}</td>
            </tr>
            <tr>
                <th>Programas</th>
                <td>
                    <ul>
                        {% for programa in conductor.programas %}
                            <li>{{ programa.id }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_conductor_index') }}">back to list</a>

    <a href="{{ path('app_conductor_edit', {'id': conductor.id}) }}">edit</a>

    {{ include('conductor/_delete_form.html.twig') }}
{% endblock %}