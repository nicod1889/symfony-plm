{% extends 'base.html.twig' %}

{% block title %}Listado de categorias{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between">
        <h1>Listado de categorias</h1>
        <a class="text-white btn btn-success mb-4" href="{{ path('app_category_new') }}">Create new</a>
    </div>

    <table class="table">
        <thead>
            <tr class="text-center">
                <th>Id</th>
                <th>Name</th>
                <th>Created On</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr class="text-center">
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.createdOn ? category.createdOn|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}"><i class="fa-solid fa-eye"></i></a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr class="text-center">
                <td colspan="6">No existen registros.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
