{% extends 'base.html.twig' %}

{% block body %}

    <div class="container text-center">
        <div class="row">
            <div class="col">
                {{ name }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {% if email != null %}
                    {{ email }}
                {% else %}
                    "No existe el email"
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col">
                <ul class="list-group">
                {% for item in items %}
                    <li class="list-group item"> {{ item }} </li>
                {% endfor %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}